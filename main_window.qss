QMenuBar::item {
    font-size: 12px;
    font-family: "Verdana", sans-serif;
}

/* Стиль для пункта меню при его выборе */
QMenuBar::item:selected {
    border: 1px solid #555;
    border-radius: 6px;
}

QPlainTextEdit {
    font-size: 25.5px;
    font-family: "Arial", sans-serif;
}

QPushButton {
    font-size: 12px;
    font-family: "Verdana", sans-serif;
}

QLabel {
    font-size: 16px;
    font-family: "Verdana", sans-serif;
}